		this.title = title;
		this.author = author;
		this.isbn = isbn;
		this.isAvailable = true;
	}
	
	// 책 대여 메서드
	// : 책이 대여 중이 경우 오류 발생
	// : 대여 시 isAvailable을 false 설정
	public void borrowBook() {
		
	}
	
	
	// 책 반납 메서드
	// : 반납 시 isAvailable을 true 설정
	
	
}
